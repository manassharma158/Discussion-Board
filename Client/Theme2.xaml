<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:local="clr-namespace:Client">
    <Color x:Key="Color1">DarkBlue</Color>
    <Color x:Key="Color2">CadetBlue</Color>
    <Color x:Key="Color3">azure</Color>

    <SolidColorBrush x:Key="Color1Bg" Color="DarkBlue"></SolidColorBrush>
    <SolidColorBrush x:Key="Color2Bg" Color="CadetBlue"></SolidColorBrush>
    <SolidColorBrush x:Key="Color3Bg" Color="Azure"></SolidColorBrush>

</ResourceDictionary>